{
  "name": "neonode-quick-starter",
  "exports": {
    "./biome": "./biome.json"
  },
  "version": "1.0.0",
  "description": "Neonode Quick Starter RESTful Service",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=true -r tsconfig-paths/register src/server.ts",
    "build": "tsup",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shravan20/neonode-quick-starter.git"
  },
  "keywords": [
    "neon",
    "nodejs",
    "postgresql",
    "boilerplate"
  ],
  "author": "@shravan20",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shravan20/neonode-quick-starter/issues"
  },
  "homepage": "https://github.com/shravan20/neonode-quick-starter#readme",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.0",
    "@types/winston": "^2.4.4",
    "husky": "^9.1.5",
    "nodemon": "^3.1.4",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.2.4",
    "tsx": "^4.18.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "winston": "^3.14.2"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
